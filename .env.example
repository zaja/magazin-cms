# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string (required)
DATABASE_URL=postgresql://payload_user:your_password@127.0.0.1:5432/payload_cms_db

# ===========================================
# SECURITY
# ===========================================
# Used to encrypt JWT tokens (required, generate with: openssl rand -hex 32)
PAYLOAD_SECRET=your_secret_here_min_32_chars

# Secret used to authenticate cron jobs
CRON_SECRET=your_cron_secret_here

# Used to validate preview requests
PREVIEW_SECRET=your_preview_secret_here

# ===========================================
# SERVER
# ===========================================
# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Node environment (development | production)
NODE_ENV=development

# ===========================================
# EMAIL - RESEND (Primary)
# ===========================================
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Magazin CMS

# ===========================================
# EMAIL - SMTP (Fallback)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Magazin CMS
