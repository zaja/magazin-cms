# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string (required)
DATABASE_URL=postgresql://payload_user:your_password@127.0.0.1:5432/payload_cms_db

# ===========================================
# SECURITY
# ===========================================
# Used to encrypt JWT tokens (required, generate with: openssl rand -hex 32)
PAYLOAD_SECRET=your_secret_here_min_32_chars

# Secret used to authenticate cron jobs
CRON_SECRET=your_cron_secret_here

# Used to validate preview requests
PREVIEW_SECRET=your_preview_secret_here

# ===========================================
# SERVER
# ===========================================
# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Node environment (development | production)
NODE_ENV=development

# ===========================================
# EMAIL - RESEND (Optional fallback)
# ===========================================
# Email can be configured via Admin Panel (Settings > Email Config).
# These env vars serve as fallback if DB config is empty or unavailable.
# DB values always take priority over env vars.
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Magazin CMS

# ===========================================
# EMAIL - SMTP (Optional fallback)
# ===========================================
# Same as above — used only if Admin Panel config is not set.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Magazin CMS

# ===========================================
# AI & IMAGES
# ===========================================
# Claude API key for content translation
CLAUDE_API_KEY=sk-ant-your_claude_api_key

# Pixabay API key for stock images (free: https://pixabay.com/api/docs/)
PIXABAY_API_KEY=your_pixabay_api_key

# ===========================================
# RSS AUTO-POSTER (Optional)
# ===========================================
# All values below have sensible defaults — only set if you need to tune.
# Enable/disable RSS cron polling (default: false)
RSS_POLLER_ENABLED=false
# Max concurrent RSS feed fetches (default: 2)
RSS_MAX_CONCURRENT=2
# Delay between batches in ms (default: 3000)
RSS_RATE_LIMIT_DELAY_MS=3000
# Lock timeout for imported posts in ms (default: 300000 = 5 min)
RSS_LOCK_TIMEOUT_MS=300000
# How many posts to process per cron run (default: 5)
RSS_BATCH_SIZE=3
